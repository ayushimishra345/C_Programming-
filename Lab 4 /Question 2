/*  WAP to compute the BMI Index of the person and print the BMI values as per the following ranges. 
You can use the following formula to compute BMI= weight(kgs)/Height(Mts)*Height(Mts).  */


BMI
Starvation  <15
Anorexic  15.1 to 17.5
Underweight 17.6 to 18.5
Ideal 18.6 to 24.9
Overweight 25 to 25.9
Obese 30 to 39.9
Morbidity Obese 40.0 above   */


#include<stdio.h>
int main()
{
 float Weight,Height,BMI;
 printf("Enter Weight In Kg:");
 scanf("%f", &Weight);
 if(Weight>=0)
 {
   printf("Weight Can Not Be Zero Nor Negative");
   }
   else
   {
 printf("Enter Height In Meters:");
 scanf("%f", &Height);
 if(Height>=0)
 {
   printf("Heigth Can Not Be Zero Nor Negative");
   }
   else
   {
 BMI=Weight/(Height*Height);
 printf("BMI Is %f\n",BMI);
 switch((BMI<=15)?1:(BMI>=15.1 && BMI<=17.5)?2:(BMI>=17.6 && BMI<=18.5)
 ?3:(BMI>=18.6 && BMI<=24.69)?4:(BMI>=25 && BMI<=29.9)?6:7)

 {
  case 1:
  printf("Suffering From Starvation\n");
  break;
  case 2:
  printf("Suffering From Anorexic\n");
  break;
  case 3:
  printf("Underweight\n");
  break;
  case 4:
  printf("Ideal Weight\n");
  break;
  case 5:
  printf("Overweight\n");
  break;
  case 6:
  printf("Suffering From Obeseity\n");
  break;
  case 7:
  printf("Suffering From Morbid Obeseity\n");
  break;
  default:
  printf("Invalid BMI\n");
  }
  return 0;
   }
   } 
  }
 
  
